{
    "name": "kitzberger/cakephp-markdown",
    "description": "Cakephp Markdown plugin for CakePHP 4.x",
    "license": "MIT",
    "type": "cakephp-plugin",
    "authors": [
        {
            "name": "Tanuck",
            "email": "tanuck@gmail.com"
        },
        {
            "name": "Philipp Kitzberger",
            "email": "coding@kitze.net"
        }
    ],
    "require": {
        "php": ">=7.4",
        "cakephp/cakephp": "^4.0",
        "cakephp/plugin-installer": "*",
        "cebe/markdown": "1.0.x"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "cakephp/cakephp-codesniffer": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Tanuck\\Markdown\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tanuck\\Markdown\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    }
}
